#!/bin/zsh

source activate grl

algos=($1)
suite=grid_world
envs=(staghunt)
config=magw_a2c
args1=(5e-4 1e-4)
args2=(True False)
args3=(meta)
args4=(0)
date=$(date +"%m%d")
