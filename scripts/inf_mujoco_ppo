#!/bin/bash

export PYTHONPATH=.

suite=$1
shift
algos=(
    happo
    # happo_lka1
    # happo_lka2
    # $1
    # masac_lka1
    # mambpo
)
envs=(
    Ant_2x4
    HalfCheetah_2x3
    Walker2d_2x3
)
